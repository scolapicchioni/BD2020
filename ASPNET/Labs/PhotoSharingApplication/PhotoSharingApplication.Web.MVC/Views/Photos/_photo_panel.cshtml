}

<div class="card-header">
    <h5 class="card-title">@Html.DisplayFor(modelItem => Model.Title)</h5>
</div>
<div class="card-body">
    <img class="card-img" src="/photos/getimage/@Model.Id" />
    <p class="card-text">@Html.DisplayFor(modelItem => Model.Description)</p>
    <p class="card-text">Uploaded on @Html.DisplayFor(modelItem => Model.DateUploaded)</p>
</div>